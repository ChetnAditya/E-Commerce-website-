<web-app xmlns="http://127.0.0.1:3000/E-Commerce%20Website/index.html" version="3.0">
    <display-name>E-Commerce Web Application</display-name>

    <!-- Define the controller servlet -->
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>com.example.ecommerce.controller.ProductController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>pages/productList.jsp</welcome-file>
    </welcome-file-list>
</web-app>

